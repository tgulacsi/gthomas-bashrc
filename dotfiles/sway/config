exec [ -x /usr/bin/clipman ] && wl-paste -t text --watch clipman store --no-persist

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
