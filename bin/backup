#!/bin/sh
set -e
exec 2>&1
# shellcheck source=../.ssh/restic.env
. "$HOME/.ssh/restic.env"
F="$HOME/restic-git-config.tar"
rm -f "$F" || echo $?
trap 'rm '"$F" EXIT

export "PATH=$HOME/bin:$PATH"

sudo tar cf - --one-file-system /etc /usr/local/bin >/dev/null

cd "$HOME"
find -O3 ./src/ -xdev -type f -path '*/.git/config' -print0 |
	tar caf "$F" --null --one-file-system -T -
if ! crontab -l >.config/crontab; then rm -f .config/crontab; fi
apt list ~i 2>/dev/null | sed -ne '/\[installed\]$/ { s,^\([^/]*\)/.*$,\1,; p; }' > .config/apt.installed.list
nice -n 13 ionice -c3 restic backup -v .config .gnupg .ssh Documents .password-store "$F"
sudo tar cf - --one-file-system /etc /usr/local/bin | restic backup --stdin --stdin-filename etc.tar
restic forget -H 3 -d 3 -w 3 -m 3
