#!/bin/sh
set -e
exec 2>&1
. $HOME/.ssh/restic.env
~/bin/restic backup .config .ssh Documents .password-store /etc
{ find ~/src/ -type f -path '*/.git/config' -print0 || echo '' >&2; } | \
	tar cf - --null -T - | \
	~/bin/restic backup --stdin --stdin-filename .git/config
~/bin/restic forget -H 3 -d 3 -w 3 -m 3
