#!/bin/sh
fn=
for nm in "$1" /opt/firefox/firefox firefox chromium google-chrome chromium-browser iceweasel; do
	if [ -x "$nm" ]; then
		fn="$nm"
		break
	fi
	if [ -z "$nm" ]; then
		continue
	fi
	if ! [ -x /usr/bin/$nm ]; then
		continue
	fi
	fn=/usr/bin/$nm
	break
done
set -x
killall $nm
killall 'Web Content'
ps -ef | grep "$nm" | fgrep '     1 ' | awk '{print $2}' | xargs -n8 -- kill -9
sleep 0.5
killall -9 $nm
sleep 0.5
#exec nice -n 15 ionice -c 3 "$fn"
exec "$fn"
