#!/bin/sh
export MOZ_ENABLE_WAYLAND=1
fn=
for nm in "${1:-}" firefox /opt/firefox/firefox iceweasel chromium google-chrome chromium-browser ; do
	if [ -z "$nm" ]; then
		continue
	fi
	if [ -x "$nm" ]; then
		fn="$nm"
		nm="$(basename "$fn")"
		break
	fi
	if ! [ -x "/usr/bin/$nm" ]; then
		continue
	fi
	fn="/usr/bin/$nm"
	break
done
echo "nm=$nm fn=$fn" >&2
if [ -z "$fn" ] || [ -z "$nm" ]; then
	exit 1
fi
set -x
killall "$nm"
killall 'Web Content'
#ps -ef | grep "$nm" | grep -F '     1 ' | awk '{print $2}' | xargs -n8 -- kill -9
sleep 0.5
killall -9 "$nm"
sleep 0.5
#exec nice -n 15 ionice -c 3 "$fn"
ulimit -d unlimited
exec "$fn"
