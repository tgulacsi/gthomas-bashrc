#!/bin/bash
set -u
set -e
rdp="${1:-}"
if [ $# -ge 1 ]; then
	shift 1
fi
if [ -z "$rdp" ]; then
	rdp="$(find "$(xdg-user-dir DOWNLOAD)" -type f -name 'launch*.rdp' -printf '%T@\t%p\000' | sort -znr -k 1 | head -zn1 | cut -f2)"
fi
echo "# rdp=$rdp" >&2
gw=
gat=
for line in $(cat "$rdp" | tr -d "" | awk -F: '/^(gateway(hostname|accesstoken))/ {print $1 ":" $3}'); do
	k=${line%:*}
	v=${line#*:}
	case "$k" in
	*hostname) gw="$v" ;;
	*accesstoken) gat="$v" ;;
	esac
	echo "# gw=$gw gat=$gat" >&2
done

if [ -z "$gw" ]; then
	gw=vpn-hun.aegon.com
fi

echo "# gat=$gat gw=$gw" >&2
passw="${PASSWORD:-$(pass show U/A/gulacsit | head -n1)}"

set -x
#exec xfreerdp  /u:gulacsit /d:ab-aegon "/p:${passw}" "/v:${host}" "/g:${gw}" "/gat:${gat}" "$@"
#exec xfreerdp "$rdp" /u:gulacsit /d:ab-aegon "/p:${passw}" /cert-tofu -decorations +drives /dynamic-resolution /f -fonts /gdi:hw  /gfx:AVC420 +heartbeat /network:modem -themes +clipboard "$@"
prog="$(which xfreerdp || echo /opt/freerdp-nightly/bin/xfreerdp)"
wlprog="$(which wlfreerdp || echo "$(dirname "$prog")/wlfreerdp")"
if [ "${XDG_SESSION_TYPE:-}" = wayland ] && [ -x "$wlprog" ]; then
	prog="$wlprog"
fi
prog=${RDP:-$prog}
#/drive:tmp,/tmp
set -x
#exec "${prog}" "$rdp" /u:gulacsit /d:ab-aegon "/p:${passw}" /cert-ignore /f -themes -decorations -fonts /gdi:hw +heartbeat /network:modem +clipboard /log-level:WARN -grab-keyboard +async-channels +async-input +async-update +fast-path +offscreen-cache -bitmap-cache /compression-level:1 /smart-sizing:${w}x$(($h - 24 )) "$@"
exec "${prog}" "$rdp" /u:gulacsit /d:ab-aegon "/p:${passw}" /cert-ignore \
    -grab-keyboard /kbd:0x409 \
	+auto-reconnect /auto-reconnect-max-retries:10 \
    +clipboard \
	/compression-level:1  \
	-decorations /disp \
	+fonts  \
	/geometry \
	/gfx:AVC444 +gfx-progressive +gfx-small-cache +gfx-thin-client +glyph-cache  \
	/jpeg /jpeg-quality:75 \
    /log-level:WARN \
	+multitransport \
	/network:auto /nsc \
	+offscreen-cache  \
	-themes \
	+toggle-fullscreen \
	-wallpaper \
"$@"
