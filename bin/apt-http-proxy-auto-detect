#!/bin/bash
addr1=192.168.100.2
addr2=100.96.161.71

#echo "# args=$@" >&2
if [[ $# -gt 0 ]] && echo "$@" | grep -Fq 'https://'; then
	echo 'DIRECT'
	exit 0
fi
list=("$addr1")
if ip link show tailscale0 >/dev/null 2>/dev/null && tailscale status | grep -F "$addr2" | grep -Fqv offline; then
	list+=("$addr2")
fi
#echo "# list=${list[*]}" >&2
for addr in "${list[@]}"; do
	addr="http://${addr}:3142"
	if curl -sS -m1 "$addr" | grep -Fq Apt-Cacher; then
		echo "$addr"
		exit 0
	fi
done
echo 'DIRECT'
