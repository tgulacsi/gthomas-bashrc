#!/bin/sh
DOWN=0
ID=unosoft
for arg in "$@"; do
	case "$arg" in
		down) DOWN=1
			;;
		*)
			ID="$arg"
			;;
	esac
done

if [ "${FULL:-0}" = 1 ] && nmcli con show --active | fgrep -q Alvallalkozok; then
	nmcli --ask con down id Alvallalkozok
	nmcli --ask con up id Alvallalkozok
fi
nmcli --ask con down id "$ID"
if [ $DOWN -eq 1 ]; then
	exit 0
fi

exec nmcli --ask con up id "$ID"

while true; do
	while ! nmcli --ask con up id "$ID" 2>&1| fgrep -q 'already active'; do
		sleep 1
	done

	break

	echo $(date '+%H:%M:%S') 'activated'
	while [ $(nmcli con show --active id "$ID" | wc -l) -ne 0 ]; do
		sleep 3
	done
	echo $(date '+%H:%M:%S') 'disconnected'
done
