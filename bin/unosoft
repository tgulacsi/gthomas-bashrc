#!/bin/sh
DOWN=0
ID=unosoft
for arg in "$@"; do
	case "$arg" in
		down) DOWN=1
			;;
		*)
			ID="$arg"
			;;
	esac
done

nmcli --ask con down id "$ID"
if [ $DOWN -eq 1 ]; then
	exit 0
fi

set -e
nmcli --ask con up id "$ID"
exec sudo systemd-resolve -i tun0 --set-dns 10.65.85.1

while true; do
	while ! nmcli --ask con up id "$ID" 2>&1| fgrep -q 'already active'; do
		sleep 1
	done

	break

	echo $(date '+%H:%M:%S') 'activated'
	while [ $(nmcli con show --active id "$ID" | wc -l) -ne 0 ]; do
		sleep 3
	done
	echo $(date '+%H:%M:%S') 'disconnected'
done
