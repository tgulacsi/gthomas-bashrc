#!/bin/sh
dn="/run/user/$(id -u)/gnupg"
mkdir -p $dn

systemctl --user start gpg-agent-ssh.socket

sfn="$dn/S.gpg-agent.ssh"

if [ -z "$SSH_AUTH_SOCK" ] || [ ! -e "$SSH_AUTH_SOCK" ] && [ -e "$sfn" ]; then
    export SSH_AUTH_SOCK="$sfn"
    echo "export SSH_AUTH_SOCK='$sfn'"
fi


if true; then
    ssh-add 2>/dev/null
	ssh-add -l | grep -Fq 'SHA256:WmqucptQsstLxCvVq2gnJhORXCRr9bWlUTkY7Qk0+go' ||
		ssh-add ~/.ssh/TGulacsi.pem
	ssh-add -l | grep -Fq 'SHA256:53GJlWP6jSgy+5dim4tFHzagbl1vERA0Donur48HXAc' ||
		ssh-add ~/.ssh/tgulacsi2@unosoft
	if false; then
		ssh-add -l | grep -Fq 'SHA256:OivGGItpjLxShQZ6qoSgXpvFGQfoViifgS2LBqPLJVY' ||
			ssh-add ~/.ssh/tgulacsi@unosoft
		ssh-add -l | grep -Fq 'SHA256:4QaaMbehmiFYfTJ7ev8VA8hka6Mu4Zp0G4UG1kAD8RI' ||
			ssh-add ~/.ssh/tgulacsi3@unosoft
	fi
fi

if false; then
	echo reloadagent | gpg-connect-agent >/dev/null || {
		eval $(gpg-agent -s)
	}
fi

if which keychain >/dev/null 2>/dev/null; then
	#eval $(keychain -q --ignore-missing --agents 'gpg,ssh' --gpg2 --systemd --eval ~/.ssh/TGulacsi.pem ~/.ssh/tgulacsi2@unosoft ~/.ssh/tgulacsi@unosoft ~/.ssh/tgulacsi3@unosoft 2>/dev/null)
	eval $(keychain -q --ignore-missing --agents 'gpg,ssh' --gpg2 --systemd --eval ~/.ssh/TGulacsi.pem 2>/dev/null)
fi
